!!! 5
%html.no-js.nl(lang="nl")
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge" http-equiv="X-UA-Compatible")
    %title pageTitle
    %meta(content="Description" name="description")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %ink(rel="icon" type="image/x-icon" href="/assets/images/favicons/favicon.ico")
    %link(rel="apple-touch-icon" href="/assets/images/favicons/touch-icon-precomposed.png")
    / build:css
    %link(href="/assets/css/style.css" rel="stylesheet")
    / endbuild
    <% if(modernizrOption){ %>
    / build:modernizr
    %script(src="/assets/js/libs/modernizr.dev.js")
    /endbuild <% } %>
  %body
    <% if(jqueryOption && !requireOption){ %>%script(src="/assets/js/libs/jquery.min.js")<% } %>
    <% if(waypointsOption && jqueryOption && !requireOption){ %>%script(src="/assets/js/libs/jquery.waypoints.min.js")<% } else if(waypointsOption && !requireOption) { %>%script(src="/assets/js/libs/noframework.waypoints.min.js")<% } %><% if(signalsOption && !requireOption){ %>
    %script(src="/assets/js/libs/signals.min.js")<% } %><% if(d3jsOption && !requireOption){ %>
    %script(src="/assets/js/libs/d3.min.js")<% } %><% if(enquireOption && !requireOption){ %>
    %script(src="/assets/js/libs/enquire.min.js")<% } %><% if(tweenmaxOption && !requireOption){ %>
    %script(src="/assets/js/libs/TweenMax.min.js")<% } %><% if(requireOption){ %>
    %script(src="/assets/js/libs/require.js")<% } %>
    / build:js
    %script(sr="/assets/js/script.js")
    / endbuild

    <% if(analyticsOption){ %>
    %script
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-XXXXX-X', 'auto');
        ga('send', 'pageview');<% } %>
