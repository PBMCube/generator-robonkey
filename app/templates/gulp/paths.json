{
  "scripts": {
    "src": "./../src/js/**/*.js",
    "build": "./..<%= templateDest %>/assets/js/"
  },
  "modernizr": {
    "build": "./..<%= templateDest %>/assets/js/libs/"
  },
  "html": {
    "src": "./..<%= templateDest %>/**/*.html",
    "build": "./..<%= templateDest %>/"
  },
  "images": {
    "src": "./../src/images/**/*",
    "build": "./..<%= templateDest %>/assets/images/"
  },
  "styles": {<% if(includeSCSS){ %>
    "src": "./../src/scss/style.scss",
    "src_files": "./../src/scss/**/*.scss",<% } %><% if(includeStylus){ %>
    "src": "./../src/stylus/style.styl",
    "src_files": "./../src/stylus/**/*.styl",<% } %><% if(includeLess){ %>
    "src": "./../src/less/style.less",
    "src_files": "./../src/less/**/*.less",<% } %>
    "build_srcsmap": "./..<%= templateDest %>/assets/css/",
    "build": "./..<%= templateDest %>/assets/css/"
  },<% if(includeJade){ %>
  "jade": {
    "src": "./../src/jade/*.jade",
    "watch": "./../src/jade/**/*.jade",
    "build": "./..<%= templateDest %>/"
  },<% } %><% if(includeHaml){ %>
  "haml": {
    "src": "./../src/haml/*.haml",
    "watch": "./../src/haml/**/*.haml",
    "build": "./..<%= templateDest %>/"
  },<% } %><% if(includeHandlebars){ %>
  "handlebars": {
    "src": "./../src/handlebars/*.html",
    "watch": "./../src/handlebars/**/*.html",
    "watchdata": "./../src/handlebars/**/*.json",
    "partials": "./../src/handlebars/partials",
    "build": "./..<%= templateDest %>/"
  },<% } %><% if(includeNunjucks){ %>
  "nunjucks": {
    "src": "./../src/nunjucks/pages/**/*.html",
    "watch": "./../src/nunjucks/**/*.html",
    "templates": "./../src/nunjucks/",
    "build": "./..<%= templateDest %>/"
  },<% } %>
  "postcss": {
    "src": "./..<%= templateDest %>/assets/css/style.css",
    "build": "./..<%= templateDest %>/assets/css/"
  },
  "font": {
    "src": "./../src/iconfont/svg/*.svg",
    "build": "./..<%= templateDest %>/assets/fonts/",<% if(includeSCSS){ %>
    "templateInput": "../src/iconfont/template/_icons.scss",
    "templateOutput": "../../../../src/scss/modules/_icons.scss",<% } %><% if(includeStylus){ %>
    "templateInput": "../src/iconfont/template/icons.styl",
    "templateOutput": "../../../../src/stylus/modules/icons.styl",<% } %><% if(includeLess){ %>
    "templateInput": "../src/iconfont/template/icons.less",
    "templateOutput": "../../../../src/less/modules/icons.less",<% } %>
    "templateFontpath": "../fonts/"
  }
}
