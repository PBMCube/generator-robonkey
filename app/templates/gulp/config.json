{
  "projectURL": "<%= projectUrl %>",
  <% if(scopifyOption){ %>"scope": "#scope",<% } if(classprefixOption){ %>
  "prefix": "prfx-",<% } if(modernizrOption){ %>
  "modernizr": {
    "excludeTests": [],
    "tests": [],
    "output": "modernizr-custom.js",
    "options": [ "setClasses", "addTest", "testProp", "fnBind" ],
    "build": "<%= rootFolder %><%= templateDest %><%= jsLibDirPathGulp %>/"
  },<% } if(customIconfontOption) { %>"iconFont": {
    "name": "<%= customIconFontName %>",
    "types": ["ttf", "eot", "woff", "woff2", "svg"]
  }, <% } if(autoprefixerOption || cssnextOption){ %>
  "browsers": "last 3 versions, > 1%", <% } if(csssorterOption){ %>
  "cssSortOrder": "smacss",<% } %>
  "scripts": {<% if(javascriptOption === 'vanilla'){ %>
    "src": "<%= rootFolder %>src/js/**/*.js",<% } if(javascriptOption === 'coffee'){ %>
    "src": "<%= rootFolder %>src/coffee/**/*.coffee",<% } %>
    "build": "<%= rootFolder %><%= templateDest %><%= jsDirPathGulp %>/",
    "src_lib": "<%= rootFolder %><%= templateDest %><%= jsLibDirPathGulp %>/**/*.js",
    "build_lib": "<%= rootFolder %><%= templateDest %><%= jsLibDirPathGulp %>/"
  },
  "images": {
    "src": "<%= rootFolder %>src/img/**/*",
    "build": "<%= rootFolder %><%= templateDest %><%= imgDirPathGulp %>"
  },
  "styles": {<% if(preproOption === 'sass'){ %>
    "src": "<%= rootFolder %>src/scss/style.scss",
    "src_files": "<%= rootFolder %>src/scss/**/*.scss",<% } if(preproOption === 'stylus'){ %>
    "src": "<%= rootFolder %>src/stylus/style.styl",
    "src_files": "<%= rootFolder %>src/stylus/**/*.styl",<% } if(preproOption === 'less'){ %>
    "src": "<%= rootFolder %>src/less/style.less",
    "src_files": "<%= rootFolder %>src/less/**/*.less",<% } %>
    "build_srcsmap": "<%= rootFolder %><%= templateDest %><%= cssDirPathGulp %>/",
    "build": "<%= rootFolder %><%= templateDest %><%= cssDirPathGulp %>/",
    "src_lib": "<%= rootFolder %><%= templateDest %><%= cssLibDirPathGulp %>/**/*.css",
    "build_lib": "<%= rootFolder %><%= templateDest %><%= cssLibDirPathGulp %>/"
  },<% if(environmentOption === 'static'){ %>
  "html": {
    "src": "<%= rootFolder %><%= templateDest %>/**/*.html",
    "build": "<%= rootFolder %><%= templateDest %>/"
  },<% } if(templateOption === 'jade' && environmentOption === 'static'){ %>
  "jade": {
    "src": "<%= rootFolder %>src/jade/*.jade",
    "watch": "<%= rootFolder %>src/jade/**/*.jade",
    "build": "<%= rootFolder %><%= templateDest %>/"
  },<% } if(templateOption === 'haml' && environmentOption === 'static'){ %>
  "haml": {
    "src": "<%= rootFolder %>src/haml/*.haml",
    "watch": "<%= rootFolder %>src/haml/**/*.haml",
    "build": "<%= rootFolder %><%= templateDest %>/"
  },<% } if(templateOption === 'handlebars' && environmentOption === 'static'){ %>
  "handlebars": {
    "src": "<%= rootFolder %>src/handlebars/*.html",
    "watch": "<%= rootFolder %>src/handlebars/**/*.html",
    "watchdata": "<%= rootFolder %>src/handlebars/**/*.json",
    "partials": "<%=  rootFolder %>src/handlebars/partials",
    "build": "<%= rootFolder %><%= templateDest %>/"
  },<% } if(templateOption === 'nunjucks' && environmentOption === 'static'){ %>
  "nunjucks": {
    "src": "<%= rootFolder %>src/nunjucks/pages/**/*.html",
    "watch": "<%= rootFolder %>src/nunjucks/**/*.html",
    "templates": "<%= rootFolder %>src/nunjucks/",
    "build": "<%= rootFolder %><%= templateDest %>/"
  },<% } %>
  "postcss": {
    "src": "<%= rootFolder %><%= templateDest %><%= cssDirPathGulp %>/style.css",
    "build": "<%= rootFolder %><%= templateDest %><%= cssDirPathGulp %>/"
  },
  "font": {
    "src": "<%= rootFolder %>src/iconfont/svg/*.svg",
    "build": "<%= rootFolder %><%= templateDest %><%= fontDirPath %>/",<% if(preproOption === 'sass'){ %>
    "templateInput": "<%= rootFolder %>src/iconfont/template/_icons.scss",
    "templateOutput": "<%= fontStyleOutputBase %>src/scss/modules/_icons.scss",<% } if(preproOption === 'stylus'){ %>
    "templateInput": "<%= rootFolder %>src/iconfont/template/icons.styl",
    "templateOutput": "<%= fontStyleOutputBase %>src/stylus/modules/icons.styl",<% } if(preproOption === 'less'){ %>
    "templateInput": "<%= rootFolder %>src/iconfont/template/icons.less",
    "templateOutput": "<%= fontStyleOutputBase %>src/less/modules/icons.less",<% } %>
    "templateFontpath": "../fonts/"
  }
}
